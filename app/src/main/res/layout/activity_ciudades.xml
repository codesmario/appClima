<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Ciudades" android:background="@color/colorPrimary">

    <TextView
            android:text="@string/txt_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvWelcome" android:layout_margin="16dp"
            android:textColor="@color/clc_ciudad"/>
    <Button
            android:text="@string/btn_boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bSoyapango"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button
            android:text="Validar red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnValidarCon"/>
    <Button
            android:text="HTTP REQUEST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnRequest"/>
    <Button
            android:text="Volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bVolley"/>
</LinearLayout>