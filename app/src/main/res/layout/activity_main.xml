<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:textAlignment="center">

        <TextView
                android:text="@string/txt_estatus"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEstado"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCiudad" android:textColor="@color/clc_status"/>
        <TextView
                android:text="@string/txt_ciudad"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCiudad"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGrados"
                android:textColor="@color/clc_ciudad"/>
        <TextView
                android:text="@string/txt_grados"
                android:textSize="72sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGrados"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="140dp" android:textColor="@android:color/background_light"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>